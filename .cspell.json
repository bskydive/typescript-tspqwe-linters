// cSpell Settings https://www.npmjs.com/package/cspell
{
    // Version of the setting file.  Always 0.1
    "version": "0.2",
    // language - current active spelling language
    "language": "en, ru",
    // defaults to false; set to true to allow compound words by default
    // "allowCompoundWords": true,
    // Dictionaries "spanish", "ruby", and "corp-term" will always be checked.
    // Including "spanish" in the list of dictionaries means both Spanish and English
    // words will be considered correct.
    "dictionaries": [
        "english",
        "russian",
        "cspell-dict-exclude"
    ],
	"import": ["node_modules/cspell-dict-russian/cspell-ext.json"],
    // Define each dictionary.  Relative paths are relative to the config file.
    "dictionaryDefinitions": [
        {
            "name": "cspell-dict-exclude",
            "path": ".cspell-dict-exclude.txt"
        }
    ],
    "ignorePaths": [
        "**/node_modules/**",
        "**/dist/**",
        "**/log/**",
        "**/*.sh",
        "**/*.json",
        "**/*.ico",
        "**/*.svg",
        "**/*.png",
        "**/*.log",
        "**/*.jpeg",
        "**/*.jpg",
        "**/*mock*",
        "**/*stub*"
    ],
    // words - list of words to be always considered correct
    "words": [
    ],
    // flagWords - list of words to be always considered incorrect
    // This is useful for offensive words and common spelling errors.
    // For example "hte" should be "the"
    "flagWords": [
        "hte"
    ]
}
